<body>
  <h1>Goals</h1>

  <ul>
    <% @goals.each do |goal| %>
      <% if goal.user == current_user || goal.privacy == false %>
        <li><%= link_to "#{goal.body}", goal_url(goal), method: :get %></li>
      <% end %>
    <% end %>

  </ul>

  <%= button_to "Create goal", new_goal_url, method: :get %>
</body>
