<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body>
  <% if logged_in? %>
    <%= button_to "Log out", sessions_url, method: :delete, form: {style: 'display:inline-block;'} %>
    <%= button_to "Profile", user_url(current_user), method: :get, form: {style: 'display:inline-block;'} %>
    <%= button_to "Bands", bands_url, method: :get, form: {style: 'display:inline-block;'} %>
    <br>
  <% end %>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <ul><li><%= error %></li></ul>
    <% end %>
  <% end %>

  <%= yield %>
</body>
</html>
