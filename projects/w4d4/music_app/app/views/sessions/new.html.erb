<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User login!</title>
  </head>

  <body>
    <form action="<%= sessions_url %>" method="post">
      <%= auth_token %>

      <h2> User Login! </h2>

      <label for="email">E-mail</label>
      <input id="email" name="user[email]" type="text">
      <br>

      <label for="password">Password</label>
      <input id="password" name="user[password]" type="text">
      <br>

      <input type="submit" value="Login!">
      <br>
    </form>
    <%= button_to "Not a user?", new_user_url, method: :get %>
  </body>
</html>
