<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>CAT!</title>
  </head>

  <body>
    <h4>CAT</h4>
    
    <table>
      <tr>
        <th> Name </th>
        <th> Birthday </th>
        <th> Sex </th>
        <th> Color </th>
        <th> Description </th>
      </tr>

      <tr>
        <td> <%= @cat.name %> </td>
        <td> <%= @cat.birth_date %> </td>
        <td> <%= @cat.sex %> </td>
        <td> <%= @cat.color %> </td>
        <td> <%= @cat.description %> </td>
      </tr>
    </table>

    <h4>Rental requests</h4>

    <ul>
      <% @cat_rentals.each do |rental| %>
        <li> <%= rental.start_date %> - <%= rental.end_date %> </li>
      <% end %>
    </ul>

  </body>
</html>
